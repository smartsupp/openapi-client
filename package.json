{
  "name": "@openapi-client/monorepo",
  "private": true,
  "version": "0.0.0",
  "scripts": {
    "bootstrap": "lerna bootstrap --no-ci",
    "changed": "lerna changed --all --long",
    "version": "lerna version --conventional-commits",
    "publish": "lerna publish from-package --yes",
    "clean": "lerna run clean",
    "clean:npm": "rimraf './packages/*/package-lock.json' && rimraf './packages/*/node_modules' && rimraf './package-lock.json' && rimraf './node_modules'",
    "lint": "lerna run lint",
    "fix": "lerna run fix",
    "test": "lerna run --stream --concurrency 1 --sort test",
    "test:debug": "TEST_DEBUG=1 npm run test",
    "build": "lerna run --stream --concurrency 1 --sort build",
    "build:watch": "lerna run build:watch --stream --no-sort --concurrency 9999",
    "outdated": "lerna exec --no-bail --no-prefix -- npm outdated",
    "postinstall": "husky install && npm run bootstrap"
  },
  "devDependencies": {
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "eslint": "^7.16.0",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-unicorn": "^26.0.1",
    "husky": "^7.0.4",
    "jest": "^26.6.3",
    "koa": "^2.13.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "eslint --fix"
    ]
  }
}
