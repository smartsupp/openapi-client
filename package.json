{
  "name": "openapi-client",
  "private": true,
  "devDependencies": {
    "@smartsupp/eslint-config": "^1.0.2",
    "@types/jest": "^26.0.19",
    "@types/node": "^14.14.16",
    "@typescript-eslint/eslint-plugin": "^4.11.0",
    "@typescript-eslint/parser": "^4.11.0",
    "agentkeepalive": "4.1.0",
    "axios": "^0.21.1",
    "eslint": "^7.16.0",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "koa": "^2.13.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "npm-run-all": "^4.1.5",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.4.4",
    "typescript": "^4.1.3"
  },
  "scripts": {
    "init": "cp -f $NPMRC_FILE .npmrc",
    "bootstrap": "lerna bootstrap",
    "changed": "lerna changed --all --long",
    "version": "lerna version",
    "publish": "lerna run publish:github",
    "clean": "lerna run clean",
    "lint": "lerna run lint",
    "fix": "lerna run fix",
    "test": "lerna run test",
    "build": "lerna run build",
    "build:watch": "lerna run build:watch --stream --no-sort --concurrency 9999"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "packages/**/*.ts": [
      "eslint --fix"
    ]
  }
}
