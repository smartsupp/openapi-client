{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "version": {
      "allowBranch": ["master"]
    },
    "publish": {
      "allowBranch": ["master"]
    }
  },
  "ignoreChanges": [
    "**/test/**",
    "**/*.js"
  ]
}
