{
  "packages": [
    "packages/*"
  ],
  "version": "independent",
  "command": {
    "bootstrap": {
      "npmClientArgs": ["--no-package-lock"]
    },
    "version": {
      "allowBranch": ["master"],
      "message": "chore(release): Publish"
    },
    "publish": {
      "allowBranch": ["master"]
    }
  },
  "ignoreChanges": [
    "**/test/**",
    "**/*.js",
    "**/*.md",
    "**/package-lock.json"
  ]
}
